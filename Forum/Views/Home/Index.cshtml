@model HomeViewModel
@{
    ViewData["Title"] = "Home";
}

<div class="row">
    <div class="posts col-lg-8 col-md-8">
        <div class="posts__body">

            <div class="post ">
                <div class="wrap-ut pull-left">
                    <div class="posts__tags tags">

                    </div>
                    <div class="userinfo pull-left">
                        <div class="avatar">
                            <img src="~/fonts/icons/main/Pinned.svg" alt="Pinned">
                            <div class="status green">&nbsp;</div>
                        </div>
                        <div class="icons">

                        </div>
                    </div>
                    <div class="posttext pull-left">
                        <h2><a asp-controller="Threads" asp-action="Guideline"> @Model.Guideline.Title </a></h2>
                        <p>@Model.Guideline.Content</p>
                    </div>

                    <div class="clearfix"></div>
                </div>
                <div class="postinfo pull-left">

                </div>
                <div class="clearfix"></div>

            </div>

            @foreach (var item in Model.Threads)
            {
                <div class="post bg-f2f4f6">
                    <div class="wrap-ut pull-left">
                        <div class="posts__tags tags">
                            <a href="#" class="bg-4f80b0">gaming</a>
                            <a href="#" class="bg-424ee8">nature</a>
                            <a href="#" class="bg-36b7d7">entertainment</a>
                        </div>
                        <div class="userinfo pull-left">
                            <div class="avatar">
                                <img src="@item.AuthorImageUrl" alt="User Profile Photo">
                                <div class="status green">&nbsp;</div>
                            </div>

                            <div class="icons">
                                <img src="~/images/icon1.jpg" alt=""><img src="~/images/icon4.jpg" alt="">
                            </div>
                        </div>
                        <div class="posttext pull-left">
                            <h2><a asp-controller="Threads" asp-action="Thread" asp-route-id="@item.Id">@item.Title</a></h2>
                            <p>@item.Content</p>
                        </div>

                        <div class="clearfix"></div>
                    </div>
                    <div class="postinfo pull-left">
                        <div class="comments">
                            <div class="commentbg">
                                560
                                <div class="mark"></div>
                            </div>

                        </div>
                        <div class="views"><i class="fa fa-eye"></i> 1,568</div>
                        <div class="time"><i class="fa fa-clock-o"></i> 24 min</div>
                    </div>
                    <div class="clearfix"></div>

                </div>

            }
          
        </div>

        <div class="col-lg-8 col-xs-12 col-md-8">
            <div class="pull-left"><a href="#" class="prevnext"><i class="fa fa-angle-left"></i></a></div>
            <div class="pull-left">
                <ul class="paginationforum">
                    <li class="hidden-xs"><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#" class="active">4</a></li>
                    <li><a href="#">8</a></li>
                    <li class="hidden-xs"><a href="#">10</a></li>
                    <li class="hidden-xs hidden-md"><a href="#">11</a></li>
                    <li><a href="#">20</a></li>
                </ul>
            </div>
            <div class="pull-left"><a href="#" class="prevnext last"><i class="fa fa-angle-right"></i></a></div>
            <div class="clearfix"></div>
        </div>
    </div>

    <div class="col-lg-4 col-md-4">

        <!-- -->
      @await  Component.InvokeAsync("ChannelCount")

        <!-- -->
        @await  Component.InvokeAsync("ThreadsFollowing")

        <!-- -->
       @await Component.InvokeAsync("FeaturedPoll")

    </div>
</div>