@model ForgotPasswordVM

@{
    ViewData["Title"] = "Forgot Password";
    Layout = "_NoLoginLayout";
}

<!-- HEADER -->

<!-- MAIN -->
<main class="signup__main">
    <img class="signup__bg" src="~/images/signup-bg.png" alt="bg">

    <div class="container">
        <div class="signup__container">
            <div class="signup__logo">
                <a href="#"><img src="~/fonts/icons/main/Logo_Forum.svg" alt="logo">Forum</a>
            </div>

            <div class="signup__head">
                <h3>Reset your Password </h3>
            </div>
            <div class="signup__form">
                <form asp-action="ForgotPassword" asp-controller="Account" method="post">

                    <div class="signup__section">
                        <label class="signup__label" asp-for="Email"></label>
                        <input type="text" class="form-control" asp-for="Email" id="email">
                        <!--  <span asp-validation-for="Email" class="text-danger"></span> -->
                    </div>


                    <div asp-validation-summary="All" class="text-danger"></div>

                    <button type="submit" class="signup__btn-create btn btn--type-02">Send Link</button>

                </form>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
