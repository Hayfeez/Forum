@model ChangePasswordVM
@{
    ViewData["Title"] = "Change Password";
}

<div class="row">
    <div class="posts col-lg-12 col-md-12">

        <div class="signup__container">
           
            <div class="signup__head">
                <h3> Change Password </h3>
            </div>
            <div class="signup__form">
                <form asp-action="ChangePassword" asp-controller="Account" method="post">

                    <div class="signup__section">
                        <label class="signup__label" asp-for="OldPassword"></label>
                        <div class="message-input">
                            <input type="password" asp-for="OldPassword" class="form-control">
                            <span asp-validation-for="OldPassword" class="text-danger"></span>
                            <!--  <span class="message-input__strong">strong</span> -->
                        </div>
                    </div>
                    <div class="signup__section">
                        <label class="signup__label" asp-for="NewPassword"></label>
                        <div class="message-input">
                            <input type="password" asp-for="NewPassword" class="form-control">
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                            <!--  <span class="message-input__strong">strong</span> -->
                        </div>
                    </div>
                    <div class="signup__section">
                        <label class="signup__label" asp-for="ConfirmNewPassword"></label>
                        <div class="message-input">
                            <input type="password" asp-for="ConfirmNewPassword" class="form-control" >
                            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                            <!--  <span class="message-input__strong">strong</span> -->
                        </div>
                    </div>


                    <div asp-validation-summary="All" class="text-danger"></div>

                    <button type="submit" class="signup__btn-create btn btn--type-02">Change Password</button>

                </form>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}