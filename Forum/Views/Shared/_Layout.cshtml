
<!doctype html>
<html lang="en-US">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Forum </title>

    <!-- STYLESHEET -->
    <!-- fonts -->
    <link href="https://fonts.googleapis.com/css?family=Nunito+Sans:300,400,600,700,800" rel="stylesheet">

    <!-- icon -->
    <link rel="stylesheet" href="~/fonts/icons/main/mainfont/style.css">
    <link rel="stylesheet" href="~/fonts/icons/font-awesome/css/font-awesome.min.css">

    <!-- Vendor -->
    <link rel="stylesheet" href="~/vendor/bootstrap/v3/bootstrap.min.css">
    <link rel="stylesheet" href="~/vendor/bootstrap/v4/bootstrap-grid.css">
    <link rel="stylesheet" href="~/vendor/toastr/toastr.min.css" />
    <!-- Custom -->
    <link rel="stylesheet" href="~/css/style.css">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    @await Component.InvokeAsync("ImageHeader")

    <!-- nav bar -->
    @await Component.InvokeAsync("NavBar")

    <main role="main">
        <div class="container">
            <!-- top bar -->
            @await Component.InvokeAsync("TopBar")

            <div class="container">
                @RenderBody()
            </div>
        </div>

    </main>

    <!-- FOOTER -->
    <footer>
        <div class="footer js-dropdown">
            <div class="container">
                <div class="footer__logo">
                    <!--Image of Forum-->
                </div>
                <div class="footer__nav">

                    <div class="footer__bline">
                        <ul class="footer__menu">
                            <li class="footer__copyright"><span>&copy; @DateTime.Now.Year - Forum </span></li>
                            <li><a href="#">About</a></li>
                            <li><a href="#">Contact Us</a></li>
                            <li><a href="#">Privacy</a></li>
                        </ul>
                        <!--   <ul class="footer__social">
                            <li><a href="#"><i class="fa fa-facebook-square" aria-hidden="true"></i></a></li>
                            <li><a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                            <li><a href="#"><i class="fa fa-cloud" aria-hidden="true"></i></a></li>
                        </ul> -->
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- JAVA SCRIPT -->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/velocity/velocity.min.js"></script>
    <script src="~/vendor/toastr/toastr.min.js"></script>
    <script src="~/vendor/sweetalert/sweetalert2.1.2.min.js"></script>

    <script src="~/js/axios.js"></script>
    <script src="~/scripts/general.js"></script>
    <script src="~/js/app.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
