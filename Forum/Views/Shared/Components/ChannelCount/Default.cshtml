@model List<ChannelThreadCount>
<div class="sidebarblock">
    <h3>Channels </h3>
    <div class="divline"></div>
    <div class="blocktxt">
        @if (Model.Count() > 0)
        {           
        <ul class="cats">
            @foreach (var item in Model)
            {
            <li><a asp-action="ChannelThreads" asp-controller="Channels" asp-route-channel="@item.ChannelTitle">@item.ChannelTitle
                <span class="badge pull-right">@item.ThreadCount </span></a></li>
            }
        </ul>           

        }
        else
        {
            <p>No channels to show </p>
        }

    </div>
</div>